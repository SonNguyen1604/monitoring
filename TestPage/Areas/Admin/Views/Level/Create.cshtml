@model Model.EF.TbCapdo

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <title>Thêm học sinh</title>
</head>
<body>

    @section header{
        <h1>
            Thêm cấp độ
            <small>Control panel</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Thêm cấp độ</li>
        </ol>
    }
    @using (Html.BeginForm("Create","Level", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

    <fieldset>
        <legend>Thêm cấp độ</legend>

        <div class="editor-label">
            @Html.HiddenFor(model => model.MaCD)
        </div>
        <div class="box-body">
            <div class="row">
                <div class="editor-field">
                    <div class="col-xs-5">
                        @Html.HiddenFor(model => model.MaCD, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MaCD)
                    </div>
                </div>
            </div>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TenCD)
        </div>
        <div class="box-body">
            <div class="row">
                <div class="editor-field">
                    <div class="col-xs-5">
                        @Html.TextBoxFor(model => model.TenCD, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TenCD)
                    </div>
                </div>
            </div>
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.TrangThai)
        </div>
        <div class="row">

            <div class="editor-checkbox-field">
                <div class="col-xs-5">
                    @Html.CheckBoxFor(model => model.TrangThai, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.TrangThai)
                </div>
            </div>
        </div>
        <br />
        <p>
            <input type="submit" value="Thêm" class="btn btn-primary" />
        </p>
    </fieldset>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>