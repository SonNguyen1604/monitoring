@*@model TestPage.Models.BtModel*@
@model Model.EF.TbBaiThi
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title></title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <link href="../Content/AdminLTE.css" rel="stylesheet" type="text/css" />

    <link href="../Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="../Content/jquery-ui.min.css" rel="stylesheet" type="text/css" />
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet" type="text/css">
    <link href="../../Content/ionicons.min.css" rel="stylesheet" type="text/css" />
</head>

<body class="bg-black">
    <div class="form-box" id="login-box">

        @if (TempData["AlertMessage"] != null)
        {
            <div class="alert @TempData["AlertType"]">
                <i class="fa fa-check"></i>
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                @TempData["AlertMessage"]
            </div>
        }

        @using (Html.BeginForm("Edit", "Record", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            @Html.HiddenFor(model => model.MaBaiThi)
            <div class="editor-label">
                <h4>Đường dẫn webcam</h4>
            </div>
            <div class="row">
                <div class="editor-field">
                    <div class="col-xs-12">
                        @Html.TextBoxFor(model => model.DuongDanWC, new { @class = "form-control", Value = @ViewBag.WC, @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.DuongDanWC)
                    </div>
                </div>
            </div>
            <div class="editor-label">
                <h4>Đường dẫn màn hình</h4>
            </div>
            <div class="row">
                <div class="editor-field">
                    <div class="col-xs-12">
                        @Html.TextBoxFor(model => model.DuongDanMH, new { @class = "form-control", Value = @ViewBag.MH, @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.DuongDanMH)
                    </div>
                </div>
            </div>
            <div class="editor-label">
                <h4>Đường dẫn âm thanh</h4>
            </div>
            <div class="row">
                <div class="editor-field">
                    <div class="col-xs-12">
                        @Html.TextBoxFor(model => model.DuongDanAT, new { @class = "form-control", Value = @ViewBag.AT, @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.DuongDanAT)
                    </div>
                </div>
            </div>
            <br /><br />
            <div class="row">
                <button type="submit" class="btn btn-primary btn-flat btn btn-block bg-blue">Nộp video</button>
            </div>

        }
    </div>
    <br /><br /><br />
</body>
</html>
