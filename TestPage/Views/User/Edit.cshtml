@model Model.EF.TbStudent

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section header{
    <!-- Top Navigation -->
    <div class="banner banner5">
        <div class="container">
            <h2>Chỉnh sửa thông tin người dùng</h2>
        </div>
    </div>
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Đăng nhập</title>
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet" type="text/css">
    <link href="../Content/AdminLTE.css" rel="stylesheet" type="text/css" />
</head>
<body class="bg-black">
    <div class="form-box">

        @using (Html.BeginForm("Edit", "User", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <fieldset>
                <div class="editor-label">
                    @Html.HiddenFor(model => model.ID)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.Username)
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="editor-field">
                         
                                @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @readonly = "readonly" })
                                @Html.ValidationMessageFor(model => model.Username)
                       
                        </div>
                    </div>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Password)
                    </div>
                    <div class="row">
                        <div class="editor-field">
                       
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control" }) <a class="text-danger">* Để trống nếu muốn giữ nguyên</a>
                                @Html.ValidationMessageFor(model => model.Password)
                        
                        </div>
                    </div>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Ho)
                    </div>
                    <div class="row">
                        <div class="editor-field">
                      
                                @Html.TextBoxFor(model => model.Ho, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Ho)
                            </div>
                  
                    </div>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Ten)
                    </div>
                    <div class="row">
                        <div class="editor-field">
                         
                                @Html.TextBoxFor(model => model.Ten, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Ten)
                          
                        </div>
                    </div>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.NgaySinh)
                    </div>
                    <div class="row">
                        <div class="editor-field">
                         
                                @Html.TextBoxFor(model => model.NgaySinh, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                                @Html.ValidationMessageFor(model => model.NgaySinh)
                          
                        </div>
                    </div>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.GioiTinh)
                    </div>
                    <div class="row">
                        <div class="editor-field">
                        
                                @Html.EditorFor(model => model.GioiTinh, new { @class = "form-control" }) Đánh dấu nếu là nam
                                @Html.ValidationMessageFor(model => model.GioiTinh)
                        </div>
                    </div>
                <br />
                <p>
                    <input type="submit" value="Sửa" class="btn btn-primary btn btn-flat btn-block"  />
                </p>
            </fieldset>
        }
        <br /><br /><br /><br />
</div>
</body>
</html>